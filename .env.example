# =============================================================================
# BrainGenTechnology - Configuration Environment Variables
# =============================================================================
# Copy this file to .env and fill in the actual values
# Never commit .env to version control - it contains sensitive information
# =============================================================================

# Application Settings
APP_NAME="BrainGenTechnology"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Africa/Casablanca
APP_URL=http://localhost

# Localization
APP_LOCALE=fr
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=fr_FR

# Maintenance Mode
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# Security
BCRYPT_ROUNDS=12

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_CONNECTION=sqlite
# For MySQL/MariaDB, uncomment and configure the following:
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=braingentech
# DB_USERNAME=root
# DB_PASSWORD=

# =============================================================================
# MAIL CONFIGURATION (Required for contact form)
# =============================================================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=contact@braingentech.com
MAIL_FROM_NAME="BrainGenTechnology"

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# =============================================================================
# CACHE & QUEUE CONFIGURATION
# =============================================================================
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=

# =============================================================================
# REDIS CONFIGURATION (Optional)
# =============================================================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# =============================================================================
# MEMCACHED CONFIGURATION (Optional)
# =============================================================================
MEMCACHED_HOST=127.0.0.1

# =============================================================================
# AWS S3 CONFIGURATION (Optional - for file storage)
# =============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# =============================================================================
# VITE CONFIGURATION (Frontend build tool)
# =============================================================================
VITE_APP_NAME="${APP_NAME}"
