{
    "id": null,
    "title": "BrainGenTechnology - Infrastructure Overview",
    "tags": ["braintech", "infrastructure", "system", "docker"],
    "timezone": "browser",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "15s",
    "panels": [
      {
        "id": 1,
        "title": "Services Status",
        "type": "stat",
        "gridPos": {"h": 6, "w": 24, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "up{job=\"laravel-app\"}",
            "legendFormat": "Laravel App"
          },
          {
            "expr": "up{job=\"rag-system\"}",
            "legendFormat": "RAG System"
          },
          {
            "expr": "up{job=\"redis\"}",
            "legendFormat": "Redis"
          },
          {
            "expr": "up{job=\"prometheus\"}",
            "legendFormat": "Prometheus"
          },
          {
            "expr": "up{job=\"node-exporter\"}",
            "legendFormat": "Node Exporter"
          },
          {
            "expr": "up{job=\"cadvisor\"}",
            "legendFormat": "cAdvisor"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "mappings": [
              {"type": "value", "value": "0", "text": "DOWN"},
              {"type": "value", "value": "1", "text": "UP"}
            ],
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "CPU Usage by Container",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{name=~\"braintech-.*\"}[5m]) * 100",
            "legendFormat": "{{name}}"
          }
        ],
        "yAxes": [
          {
            "unit": "percent",
            "min": 0
          }
        ]
      },
      {
        "id": 3,
        "title": "Memory Usage by Container",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
        "targets": [
          {
            "expr": "container_memory_usage_bytes{name=~\"braintech-.*\"} / (1024*1024*1024)",
            "legendFormat": "{{name}}"
          }
        ],
        "yAxes": [
          {
            "unit": "decbytes",
            "min": 0
          }
        ]
      },
      {
        "id": 4,
        "title": "System Load Average",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 14},
        "targets": [
          {
            "expr": "node_load1",
            "legendFormat": "1m"
          },
          {
            "expr": "node_load5",
            "legendFormat": "5m"
          },
          {
            "expr": "node_load15",
            "legendFormat": "15m"
          }
        ],
        "yAxes": [
          {
            "unit": "short",
            "min": 0
          }
        ]
      },
      {
        "id": 5,
        "title": "Disk Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 14},
        "targets": [
          {
            "expr": "(node_filesystem_size_bytes{fstype!=\"tmpfs\"} - node_filesystem_free_bytes{fstype!=\"tmpfs\"}) / node_filesystem_size_bytes{fstype!=\"tmpfs\"} * 100",
            "legendFormat": "{{mountpoint}}"
          }
        ],
        "yAxes": [
          {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        ]
      },
      {
        "id": 6,
        "title": "Network Traffic",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 14},
        "targets": [
          {
            "expr": "rate(node_network_receive_bytes_total{device!=\"lo\"}[5m])",
            "legendFormat": "RX {{device}}"
          },
          {
            "expr": "rate(node_network_transmit_bytes_total{device!=\"lo\"}[5m])",
            "legendFormat": "TX {{device}}"
          }
        ],
        "yAxes": [
          {
            "unit": "Bps",
            "min": 0
          }
        ]
      },
      {
        "id": 7,
        "title": "Container Restart Count",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 22},
        "targets": [
          {
            "expr": "container_start_time_seconds{name=~\"braintech-.*\"}",
            "legendFormat": "{{name}}"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "renameByName": {
                "name": "Container",
                "Value": "Start Time"
              }
            }
          }
        ]
      },
      {
        "id": 8,
        "title": "HTTP Request Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 22},
        "targets": [
          {
            "expr": "rate(traefik_service_requests_total[5m])",
            "legendFormat": "{{service}}"
          }
        ],
        "yAxes": [
          {
            "unit": "reqps",
            "min": 0
          }
        ]
      },
      {
        "id": 9,
        "title": "Docker Volume Usage",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 30},
        "targets": [
          {
            "expr": "container_fs_usage_bytes{name=~\"braintech-.*\"} / (1024*1024)",
            "legendFormat": "{{name}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "decbytes",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 10,
        "title": "Process Count",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 30},
        "targets": [
          {
            "expr": "node_procs_running",
            "legendFormat": "Running"
          },
          {
            "expr": "node_procs_blocked",
            "legendFormat": "Blocked"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short"
          }
        }
      }
    ]
}