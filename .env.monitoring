# Monitoring Configuration
# Copy to .env and adjust values for your environment

# Application Keys (from your existing .env)
APP_KEY=base64:your-app-key-here
GROQ_API_KEY=your-groq-api-key-here
HF_API_KEY=your-huggingface-api-key-here

# Database
DB_CONNECTION=sqlite
DB_DATABASE=/var/www/html/database/database.sqlite

# Redis Configuration
REDIS_PASSWORD=secure-redis-password-here

# Monitoring Configuration
PROMETHEUS_RETENTION_DAYS=15
GRAFANA_ADMIN_PASSWORD=secure-grafana-password-here

# Email Configuration
MAIL_MAILER=smtp
MAIL_HOST=your-smtp-host
MAIL_PORT=587
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls

# Security
APP_ENV=production
APP_DEBUG=false

# Domain Configuration (adjust for your domains)
APP_URL=https://app.braingentech.local
RAG_URL=https://rag.braingentech.local